{
    "manifest_version": 3,
    "name": "Discord Scraper",
    "version": "0.1",
    "description": "A browser extension to scrape data from Discord.",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png",
            "128": "icons/icon-128.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"],
            "css": ["content.css"],
            "world": "MAIN"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{7ee57428-adaf-411e-9b42-dc61d17e07d3}",
            "update_url": "https://github.com/fmoncomble/discordscraper/releases/latest/download/update_manifest.json"
        }
    }
}
